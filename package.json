{
	"type": "module",
	"name": "pixelpact-homepage",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite",
		"start:server": "node server/index.js",
		"dev:server": "nodemon --watch server --exec node server/index.js",
		"svgr": "svgr src/assets/svgs -d src/components/illustrations/generated --icon --ext .jsx",
		"build": "npm run svgr && vite build",
		"preview": "vite preview",
	"test": "node scripts/run-tests.js",
		"test:watch": "vitest src/__tests__ --watch",
		"playwright:install": "npx playwright install --with-deps",
		"e2e": "playwright test",
		"smoke-test": "node scripts/api-smoke.js",
		"start:server:background": "powershell -NoProfile -Command \"Start-Process -FilePath node -ArgumentList 'server/index.js' -WorkingDirectory (Get-Location)\"",
		"e2e:run": "playwright test --headed",
		"e2e:screenshots": "playwright test --project=chromium"
	},
	"bin": {
		"manage-testimonials": "scripts/manage-testimonials.js"
	},
	"vitest": {
		"environment": "jsdom",
		"globals": true,
		"threads": false,
		"setupFiles": [
			"src/setupTests.js"
		],
		"include": [
			"src/__tests__/**"
		]
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^2.2.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"lottie-web": "^5.13.0",
		"mongoose": "^7.6.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-router-dom": "^6.14.1",
		"socket.io-client": "^4.7.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"@svgr/cli": "^6.5.0",
		"@testing-library/jest-dom": "6.0.0",
		"@testing-library/react": "14.0.0",
		"@vitejs/plugin-react": "5.0.0",
		"autoprefixer": "10.4.14",
		"jsdom": "22.1.0",
		"nodemon": "2.0.22",
		"postcss": "^8.5.6",
		"socket.io": "4.8.1",
		"supertest": "^6.3.3",
		"tailwindcss": "3.4.8",
		"vite": "^7.1.12",
		"vitest": "^4.0.2",
		"node-fetch": "^3.3.2"
	}
}
