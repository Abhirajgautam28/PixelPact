{
	"type": "module",
	"name": "pixelpact-homepage",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite",
		"start:server": "node server/index.js",
		"dev:server": "nodemon --watch server --exec node server/index.js",
		"svgr": "svgr src/assets/svgs -d src/components/illustrations/generated --icon --ext .jsx",
		"build": "npm run svgr && vite build",
		"preview": "vite preview",
		"test": "node scripts/run-tests.js",
		"test:watch": "vitest src/__tests__ --watch",
		"smoke-test": "node scripts/api-smoke.js",
		"start:server:background": "powershell -NoProfile -Command \"Start-Process -FilePath node -ArgumentList 'server/index.js' -WorkingDirectory (Get-Location)\"",
		"stop:server:ps": "powershell -NoProfile -File ./scripts/stop-server.ps1",
		"stop:server:sh": "bash ./scripts/stop-server.sh",
		"stop:server": "node -e \"const os=require('os'); if (os.platform()==='win32') require('child_process').spawnSync('powershell',['-NoProfile','-File','./scripts/stop-server.ps1'],{stdio:'inherit'}); else require('child_process').spawnSync('bash',['./scripts/stop-server.sh'],{stdio:'inherit'});\"",
		"start:dev:e2e": "node ./scripts/start-dev-e2e.js",
		"e2e:install": "npx playwright install --with-deps",
		"e2e:run": "npx playwright test",
		"generate:jwt": "node scripts/generate-jwt-secret.cjs",
		"e2e:screenshots": "npx playwright test --project=chromium --update-snapshots"
		,"ci:fetch-artifacts": "powershell -NoProfile -File ./scripts/fetch-ci-artifacts.ps1"
	},
	"bin": {
		"manage-testimonials": "scripts/manage-testimonials.js"
	},
	"vitest": {
		"environment": "jsdom",
		"globals": true,
		"threads": false,
		"setupFiles": [
			"src/setupTests.js"
		],
		"include": [
			"src/__tests__/**"
		]
	},
	"dependencies": {
		"@opentelemetry/auto-instrumentations-node": "^0.67.0",
		"@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
		"@opentelemetry/resources": "^2.2.0",
		"@opentelemetry/sdk-node": "^0.208.0",
		"@opentelemetry/sdk-trace-base": "^2.2.0",
		"@opentelemetry/semantic-conventions": "^1.38.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "^2.2.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"jsonwebtoken": "^9.0.3",
		"lottie-web": "^5.13.0",
		"mongodb": "^7.0.0",
		"mongoose": "^7.6.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-router-dom": "^7.12.0",
		"socket.io-client": "^4.7.2",
		"three": "^0.181.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.0",
		"@svgr/cli": "^8.1.0",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.1",
		"@typescript-eslint/eslint-plugin": "^8.50.1",
		"@typescript-eslint/parser": "^8.46.4",
		"@vitejs/plugin-react": "5.1.2",
		"autoprefixer": "10.4.14",
		"eslint": "^9.39.2",
		"jsdom": "22.1.0",
		"node-fetch": "^3.3.2",
		"nodemon": "2.0.22",
		"pixelmatch": "^7.1.0",
		"pngjs": "^7.0.0",
		"postcss": "^8.5.6",
		"socket.io": "4.8.1",
		"supertest": "^6.3.3",
		"tailwindcss": "4.1.18",
		"vite": "^7.1.12",
		"vitest": "^4.0.2"
	}
}
