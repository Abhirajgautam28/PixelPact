{
	"type": "module",
	"name": "pixelpact-homepage",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite",
		"svgr": "svgr src/assets/svgs -d src/components/illustrations/generated --icon --ext .jsx",
		"build": "npm run svgr && vite build",
		"preview": "vite preview",
		"test": "vitest src/__tests__ --run",
		"test:watch": "vitest src/__tests__ --watch",
		"playwright:install": "npx playwright install --with-deps",
		"e2e": "playwright test",
		"e2e:run": "playwright test --headed",
		"e2e:screenshots": "playwright test --project=chromium"
	},
	"vitest": {
		"environment": "jsdom",
		"globals": true,
		"setupFiles": ["src/setupTests.js"],
		"include": ["src/__tests__/**"]
	},
	"dependencies": {
		"lottie-web": "^5.13.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-router-dom": "^6.14.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"@svgr/cli": "^6.5.0",
		"@testing-library/jest-dom": "6.0.0",
		"@testing-library/react": "14.0.0",
		"@vitejs/plugin-react": "5.0.0",
		"autoprefixer": "10.4.14",
		"jsdom": "22.1.0",
		"postcss": "^8.5.6",
		"tailwindcss": "3.4.8",
		"vite": "^5.4.21",
		"vitest": "^1.6.1"
	}
}
